<Window x:Class="Gogolev_ZagorodniyClub.View.Windows.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gogolev_ZagorodniyClub.View.Windows"
        mc:Ignorable="d"
        Title="Authorization" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Text="Загородный клуб Осень"/>

        <TextBlock Grid.Row="3" Grid.Column="1" Text="Логин"/>
        <TextBox Grid.Row="3" Grid.Column="2" x:Name="LoginTB" />

        <TextBlock Grid.Row="5" Grid.Column="1" Text="Пароль"/>
        <PasswordBox Grid.Row="5" Grid.Column="2" x:Name="PassPB"/>

        <Button Grid.Row="7" Grid.Column="2" Content="Войти" Name="LoginBtn"/>

        <Button Grid.Row="7" Grid.Column="1" Content="Нет аккаунта?" Name="NoAccBtn"/>

    </Grid>
</Window>
