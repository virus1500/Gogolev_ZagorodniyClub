<Window x:Class="Gogolev_ZagorodniyClub.View.Windows.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gogolev_ZagorodniyClub.View.Windows"
        mc:Ignorable="d"
        Title="Authorization" Height="400" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <TextBlock FontSize="20" Grid.Row="1" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Text="Загородный клуб Осень"/>

        <TextBlock Grid.Row="3" Grid.Column="1" Text="Логин"/>
        <TextBox Height="40" Grid.Row="3" Grid.Column="3" x:Name="LoginTB" />

        <TextBlock Grid.Row="5" Grid.Column="1" Text="Пароль"/>
        <PasswordBox Height="40" Grid.Row="5" Grid.Column="3" x:Name="PassPB"/>

        <Button Margin="0 0 1 0" Height="40" Grid.Row="7" Grid.Column="1" Content="Нет аккаунта?" Name="NoAccBtn" Click="NoAccBtn_Click"/>

        <Button Margin="0 0 1 0" Height="40" Grid.Row="7" Grid.Column="3" Content="Войти" Name="LoginBtn" Click="LoginBtn_Click"/>

    </Grid>
</Window>
